<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GoalFlow.ViewModels"
             x:Class="GoalFlow.Views.MainPage"
             BackgroundColor="#121212"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" Padding="20">
        
        <!-- Header / Logo Area -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center" Margin="0,40,0,20">
            <Image Source="goalflow.png" 
                   HeightRequest="180" 
                   HorizontalOptions="Center" 
                   Aspect="AspectFit"/>
        </VerticalStackLayout>

        <!-- Inspirational Quote -->
        <Label Grid.Row="1" 
               Text="{Binding DailyQuote}" 
               TextColor="#AAAAAA" 
               FontSize="14" 
               FontAttributes="Italic"
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- Stats Section (Points & Goals Completed) -->
        <Grid Grid.Row="2" ColumnDefinitions="*, *" Margin="0,20" ColumnSpacing="15">
            <Border BackgroundColor="#1E1E1E" StrokeShape="RoundRectangle 10" Stroke="#333" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Points" TextColor="#AAAAAA" FontSize="12" HorizontalOptions="Center"/>
                    <Label Text="{Binding TotalPoints}" TextColor="#FFD700" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
            
            <Border Grid.Column="1" BackgroundColor="#1E1E1E" StrokeShape="RoundRectangle 10" Stroke="#333" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Goals Completed" TextColor="#AAAAAA" FontSize="12" HorizontalOptions="Center"/>
                    <Label Text="{Binding GoalsCompleted}" TextColor="#4FC3F7" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Main Action Buttons -->
        <VerticalStackLayout Grid.Row="3" Spacing="20" VerticalOptions="Center">
            
            <!-- Green Button -->
            <Button Text="What I achieved..." 
                    Command="{Binding NavigateToAchievementsCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="60"
                    Shadow="{Shadow Brush=Green, Radius=5, Offset='2,2'}"/>

            <!-- Orange Button -->
            <Button Text="Today is a good day to..." 
                    Command="{Binding NavigateToGoalsTodayCommand}"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="60"
                    Shadow="{Shadow Brush=Orange, Radius=5, Offset='2,2'}"/>

            <!-- Blue Button -->
            <Button Text="My Goals" 
                    Command="{Binding NavigateToGoalsCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="60"
                    Shadow="{Shadow Brush=Blue, Radius=5, Offset='2,2'}"/>
        </VerticalStackLayout>
        
        <Label Grid.Row="4" 
               Text="Build v1.0" 
               TextColor="#333" 
               HorizontalOptions="Center" 
               Margin="0,20,0,0"/>

    </Grid>
</ContentPage>