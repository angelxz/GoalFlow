<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoalFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GoalFlow.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="#121212"
    Title="GoalFlow">

    <!-- 
        Global Top Bar (TitleView) 
        This will appear on the top navigation bar of every page.
    -->
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="0,0,0,0">
            <Image Source="goalflow.png" 
                   HeightRequest="32" 
                   WidthRequest="32" 
                   VerticalOptions="Center" 
                   Aspect="AspectFit"/>
            <Label Text="GoalFlow" 
                   TextColor="White" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <!-- Default Landing Route -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

</Shell>